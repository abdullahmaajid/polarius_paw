<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Halaman Todo - Karyawan</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
  <style>
    @font-face {
      font-family: 'Baunk';
      src: url('/fonts/baunk.otf') format('opentype');
      font-weight: normal;
      font-style: normal;
    }

    body {
      background-color: #000000;
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      font-family: "Inter", serif;
      font-optical-sizing: auto;
      font-style: normal;
    }

    .glass-effect {
      background: linear-gradient(135deg, #030303, #080808);
      backdrop-filter: blur(10px);
      border-radius: 12px;
      padding: 1rem;
      box-shadow: 0 6px 6px rgba(0, 0, 0, 0.15);
      border: 1px solid #0f0f0f;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
    }

    .navbar {
      font-family: 'Baunk', sans-serif;
      background-color: #000000;
      backdrop-filter: blur(10px);
      border-radius: 12px;
      box-shadow: 0 6px 6px rgba(3, 3, 3, 0.15);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      cursor: pointer;
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      max-width: 1650px;
      padding-top: 35px;
      margin: 0 auto;
      position: relative;
    }

    .navbar .logo {
      font-size: 1.5rem;
      font-weight: bold;
    }

    .navbar .nav-links {
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .navbar .nav-links a {
      margin: 0 1rem;
      text-decoration: none;
      color: #e5e5e5;
      font-size: 0.9rem;
    }

    .navbar .nav-links a:hover {
      color: #a3a3a3;
    }

    .navbar .signout-btn {
      background-color: #e5e5e5;
      color: #171717;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      text-decoration: none;
      font-size: 0.9rem;
    }

    .navbar .signout-btn:hover {
      background-color: #a3a3a3;
    }

    .karyawan-title {
      font-size: 1.875rem;
      font-weight: 300;
      text-align: center;
      color: white;
      margin-bottom: 3rem;
    }

    .btn-add {
      background-color: #e5e5e5;
      color: black;
      font-weight: 400;
      padding: 10px;
      border-radius: 10px;
      font-size: 14px;
    }

    .headertr {
      background-color: #080808;
      backdrop-filter: blur(10px);
      color: #d3d3d3;
      font-weight: 200;
      padding: 10px;
      border-radius: 10px;
      font-size: 14px;
    }

    th, td {
      border-bottom: 1px solid #171717;
      padding: 8px;
    }

    .headertr th {
      font-weight: 400;
    }

    .btn-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
    }

    .btn-edit, .btn-delete {
      background-color: #e5e5e5;
      color: black;
      font-weight: 400;
      padding: 10px 15px;
      border-radius: 10px;
      font-size: 14px;
      width: 100%;
      max-width: 120px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .btn-edit:hover, .btn-delete:hover {
      background-color: #d3d3d3;
    }

    .table-wrapper {
      overflow-x: auto;
      overflow-y: auto;
      max-height: 400px;
    }
  </style>
</head>
<body class="text-gray-800">
  <!-- Navbar -->
  <nav class="navbar">
    <img src="images/pol2.png" alt="Logo" style="width: 10%; height: auto;">
    <div class="nav-links">
      <a href="/">Home</a>
      <a href="/todo">Karyawan</a>
      <a href="/gaji">Gaji</a>
      <a href="/jadwal">Jadwal</a>
    </div>
    <a href="/auth/login" class="signout-btn">Sign Out</a>
  </nav>

  <div class="container mx-auto p-6">
    <h1 class="karyawan-title">Karyawan</h1>

    <!-- Tombol tambah karyawan -->
    <div class="mb-6 text-center">
      <a href="/todo/tambah">
        <button class="btn-add">Tambah Karyawan</button>
      </a>
    </div>

    <!-- Glass effect applied to the whole table -->
    <div class="glass-effect">
      <div class="overflow-auto">
        <table class="min-w-full text-[#a3a3a3] border-separate" style="border-spacing: 0 10px; font-weight: 200; font-size: 12px;">
          <thead>
            <tr class="headertr">
              <th class="px-6 py-3 text-sm font-semibold">Foto</th>
              <th class="px-6 py-3 text-sm font-semibold">Nama</th>
              <th class="px-6 py-3 text-sm font-semibold">Posisi</th>
              <th class="px-6 py-3 text-sm font-semibold">Tanggal Lahir</th>
              <th class="px-6 py-3 text-sm font-semibold">Jenis Kelamin</th>
              <th class="px-6 py-3 text-sm font-semibold">Tanggal Bergabung</th>
              <th class="px-6 py-3 text-sm font-semibold">Status</th>
              <th class="px-6 py-3 text-sm font-semibold">Departemen</th>
              <th class="px-6 py-3 text-sm font-semibold">Tipe Kontrak</th>
              <th class="px-6 py-3 text-sm font-semibold">Pendidikan Terakhir</th>
              <th class="px-6 py-3 text-sm font-semibold">Email</th>
              <th class="px-6 py-3 text-sm font-semibold">Telepon</th>
              <th class="px-6 py-3 text-sm font-semibold">Alamat</th>
              <th class="px-6 py-3 text-sm font-semibold">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% karyawan.forEach(karyawan => { %>
              <tr class="glass-effect text-center" id="karyawan-<%= karyawan.id %>">
                <td class="px-6 py-4">
                  <div class="w-12 h-12 rounded-full overflow-hidden">
                    <img 
                      src="<% if (karyawan.foto) { %>data:image/jpeg;base64,<%= karyawan.foto.toString('base64') %><% } else { %>default-image.jpg<% } %>" 
                      alt="Foto Karyawan" 
                      class="w-full h-full object-cover"
                    />
                  </div>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.nama %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.jabatan %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.tanggal_lahir ? new Date(karyawan.tanggal_lahir).toLocaleDateString() : 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.jenis_kelamin || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.tanggal_bergabung ? new Date(karyawan.tanggal_bergabung).toLocaleDateString() : 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.status_karyawan %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.departemen || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.tipe_kontrak %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.pendidikan_terakhir || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.email || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.nomor_telepon || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <%= karyawan.catatan_tambahan || 'Tidak ada' %>
                </td>
                <td class="px-6 py-4">
                  <div class="btn-container">
                    <a href="/todo/edit/<%= karyawan.id %>" class="btn-edit">Edit</a>
                    <button 
                      class="btn-delete"
                      onclick="deleteKaryawan('<%= karyawan.id %>')"
                    >
                      Hapus
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Modal for delete confirmation -->
  <div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center">
    <div class="bg-white p-6 rounded-lg shadow-lg">
      <h3 class="text-xl font-semibold mb-4">Yakin ingin menghapus?</h3>
      <p>Data yang dihapus tidak dapat dikembalikan.</p>
      <div class="mt-4 flex justify-between">
        <button class="btn-purple" onclick="closeModal()">Batal</button>
        <button id="confirmDelete" class="btn-delete">Hapus</button>
      </div>
    </div>
  </div>

  <script>
    let currentKaryawanId = null;

    function deleteKaryawan(karyawanId) {
      currentKaryawanId = karyawanId;
      document.getElementById("deleteModal").classList.remove("hidden");
    }

    function closeModal() {
      document.getElementById("deleteModal").classList.add("hidden");
    }

    document.getElementById("confirmDelete").onclick = function() {
      fetch(`/todo/hapus/${currentKaryawanId}`, {
        method: 'GET',
      })
      .then(response => {
        if (response.ok) {
          // Remove the deleted row from the table
          document.getElementById(`karyawan-${currentKaryawanId}`).remove();
          closeModal();
        } else {
          alert('Gagal menghapus karyawan');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Terjadi kesalahan saat menghapus karyawan');
      });
    };
  </script>
</body>
</html>